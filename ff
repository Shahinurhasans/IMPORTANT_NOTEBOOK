        const placeholderEmojis = ['üíï', '‚ù§Ô∏è', 'üíñ', 'üíù', 'üíó', 'üíì', 'üíû', 'üíò'];

        for (let i = 0; i < numPhotos; i++) {
            const item = document.createElement('div');
            item.className = 'carousel-item';
            item.style.transform = `rotateY(${i * angle}deg) translateZ(400px)`;
            
            // If photo filename is provided, use it; otherwise show placeholder
            if (carouselPhotos[i] && carouselPhotos[i].trim() !== '') {
                item.innerHTML = `<img src="${carouselPhotos[i]}" alt="Our moment ${i + 1}" style="width: 100%; height: 100%; object-fit: cover;">`;
            } else {
                item.innerHTML = `<div class="carousel-placeholder">${placeholderEmojis[i]}</div>`;
            }
            
            carousel3d.appendChild(item);
        }

