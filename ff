            'assets\\1.jpeg', 
            'assets\\2.jpeg', // Photo 2 - Change to your filename
            'assets\\3.jpeg', // Photo 3 - Change to your filename
            'assets\\4.jpeg', // Photo 4 - Change to your filename
            'assets\\5.jpeg', // Photo 5 - Change to your filename
            'assets\\6.jpeg', // Photo 6 - Change to your filename
