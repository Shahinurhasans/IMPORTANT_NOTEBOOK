        const memoryGame = document.getElementById('memory-game');
        let flippedCards = [];
        let matchedPairs = 0;

        // Encouraging messages while playing
        const encouragingMessages = [
            "You're doing amazing! üíï",
            "So close! Keep going! ‚ù§Ô∏è",
