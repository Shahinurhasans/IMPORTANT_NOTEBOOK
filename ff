                    setTimeout(() => {
                        for (let i = 0; i < 24; i++) {
                            setTimeout(() => {
                                const heart = document.createElement('div');
                                const heartEmojis = ['üíñ', 'üíï', 'üíó', 'üíù', 'üíì', 'üíû', 'üíò', '‚ù§Ô∏è'];
                                heart.innerHTML = heartEmojis[Math.floor(Math.random() * heartEmojis.length)];
                                heart.style.position = 'fixed';
                                heart.style.left = '50%';
                                heart.style.top = '50%';
                                heart.style.fontSize = (Math.random() * 25 + 25) + 'px';
                                heart.style.zIndex = '9999';
                                heart.style.pointerEvents = 'none';
                                document.body.appendChild(heart);

                                const angle = (Math.PI * 2 * i) / 24;
                                const velocity = Math.random() * 250 + 150;
                                const tx = Math.cos(angle) * velocity;
                                const ty = Math.sin(angle) * velocity;
                                
                                heart.animate([
                                    { 
                                        transform: 'translate(-50%, -50%) translate(0, 0) scale(0) rotate(0deg)', 
                                        opacity: 1 
                                    },
                                    { 
                                        transform: `translate(-50%, -50%) translate(${tx}px, ${ty}px) scale(1.5) rotate(${Math.random() * 720 - 360}deg)`, 
                                        opacity: 0 
                                    }
                                ], {
                                    duration: 2500,
                                    easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)'
                                });

                                setTimeout(() => heart.remove(), 2500);
                            }, i * 40);
                        }
                    }, 400);
                    
                    // Add an extra sweet message after a delay
                    setTimeout(() => {
                        const extraMessages = [
                            "Every moment with you is a victory! üíñ‚ú®",
                            "You win at this game, and you've won my heart! üíïüèÜ",
                            "Perfect score for my perfect person! üíó‚≠ê",
                            "You're my favorite player in the game of love! üíùüéÆ",
                            "Together we're unbeatable! üíûüëë"
                        ];
                        const randomExtra = extraMessages[Math.floor(Math.random() * extraMessages.length)];
                        
                        gameMessage.innerHTML += `
                            <div style="margin-top: 1.5rem; font-size: 1.2rem; animation: fadeInUp 1s ease-out; 
                                        padding: 1rem; background: rgba(255, 107, 157, 0.1); 
                                        border-radius: 15px; border: 2px solid rgba(255, 107, 157, 0.3);">
                                ${randomExtra}
                            </div>
                        `;
                    }, 2500);
                } else {
                    // Show encouraging message for successful match
                    const randomMessage = encouragingMessages[Math.floor(Math.random() * encouragingMessages.length)];
                    gameMessage.innerHTML = `<span style="animation: fadeInUp 0.5s ease-out;">${randomMessage} (${matchedPairs}/${emojis.length})</span>`;
                }
            } else {
                // Not a match - show motivating message
                gameMessage.innerHTML = `<span style="opacity: 0.7;">Try again! You've got this! üí™</span>`;
                setTimeout(() => {
                    card1.classList.remove('flip');
                    card2.classList.remove('flip');
                    flippedCards = [];
                }, 400);
            }
        }

        // Stars Canvas
        const canvas = document.getElementById('stars-canvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const stars = [];
        class Star {
            constructor(x, y) {
                this.x = x;
                this.y = y;
                this.size = Math.random() * 3 + 1;
                this.speed = Math.random() * 0.5 + 0.1;
                this.opacity = Math.random();
            }
            update() {
                this.opacity += this.speed;
                if (this.opacity > 1 || this.opacity < 0) this.speed = -this.speed;
            }
            draw() {
                ctx.fillStyle = `rgba(255, 255, 255, ${this.opacity})`;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        for (let i = 0; i < 150; i++) {
            stars.push(new Star(Math.random() * canvas.width, Math.random() * canvas.height));
        }

        canvas.addEventListener('mousemove', (e) => {
            stars.push(new Star(e.clientX, e.clientY));
            if (stars.length > 200) stars.shift();
        });

        function animateStars() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            stars.forEach(star => {
                star.update();
                star.draw();
            });
            requestAnimationFrame(animateStars);
        }
        animateStars();

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

        // Love Calculator
        let loveCalculated = false;
        document.getElementById('calculate-btn').addEventListener('click', function() {
            if (loveCalculated) return; // Prevent multiple clicks
            
            const loveFill = document.getElementById('love-fill');
            const percentage = document.getElementById('love-percentage');
            const result = document.getElementById('love-result');
            const button = this;
            
            // Disable button
            button.disabled = true;
            button.style.opacity = '0.6';
            button.style.cursor = 'not-allowed';
            
            // Show transition message
            result.textContent = 'Adding your love to mine... üíï';
            
            // Animate from 50% to 100%
            setTimeout(() => {
                loveFill.style.transition = 'width 2s ease-out';
                loveFill.style.width = '100%';
                
                // Animate percentage counter
                let currentPercent = 50;
                const interval = setInterval(() => {
                    currentPercent += 2;
                    if (currentPercent >= 100) {
                        currentPercent = 100;
                        clearInterval(interval);
                    }
                    percentage.textContent = currentPercent + '%';
                }, 40);
                
                // Show final message after animation
                setTimeout(() => {
                    result.innerHTML = 'üéâ <strong>Perfect!</strong> My 50% + Your 50% = 100% Pure Love!<br><span style="font-size: 1rem; opacity: 0.9;">Together we are complete! üíñ</span>';
                    triggerConfetti();
                    loveCalculated = true;
                }, 2000);
            }, 500);
        });

        // Confetti Effect
        function triggerConfetti() {
            for (let i = 0; i < 100; i++) {
                setTimeout(() => {
                    const confetti = document.createElement('div');
                    confetti.innerHTML = ['üéâ', 'üíï', '‚ù§Ô∏è', '‚≠ê', 'üíñ'][Math.floor(Math.random() * 5)];
                    confetti.style.position = 'fixed';
                    confetti.style.left = Math.random() * window.innerWidth + 'px';
                    confetti.style.top = '-50px';
                    confetti.style.fontSize = Math.random() * 30 + 20 + 'px';
                    confetti.style.zIndex = '9999';
                    confetti.style.pointerEvents = 'none';
                    document.body.appendChild(confetti);

                    const duration = Math.random() * 3 + 2;
                    const rotation = Math.random() * 720 - 360;
                    
                    confetti.animate([
                        { transform: 'translateY(0) rotate(0deg)', opacity: 1 },
                        { transform: `translateY(${window.innerHeight}px) rotate(${rotation}deg)`, opacity: 0 }
                    ], {
                        duration: duration * 1000,
                        easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)'
                    });

                    setTimeout(() => confetti.remove(), duration * 1000);
                }, i * 30);
            }
        }

        document.getElementById('confetti-btn').addEventListener('click', triggerConfetti);

        // Music Player (Add your own music URL)
        let audio = null;
        let isPlaying = false;

        document.getElementById('music-player').addEventListener('click', function() {
            // Replace with your music URL
            // const musicUrl = 'your-romantic-song.mp3';
            
            if (!audio) {
                // audio = new Audio(musicUrl);
                // audio.loop = true;
                alert('Add your favorite romantic song URL in the JavaScript code!');
                return;
            }

            if (isPlaying) {
                audio.pause();
                document.getElementById('music-icon').classList.remove('playing');
                document.getElementById('music-status').textContent = 'Play Music';
            } else {
                audio.play();
                document.getElementById('music-icon').classList.add('playing');
                document.getElementById('music-status').textContent = 'Pause Music';
            }
            isPlaying = !isPlaying;
        });

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.timeline-item, .reason-card').forEach(el => {
            el.style.opacity = '0';
            observer.observe(el);
        });

        // Video placeholder click
        document.getElementById('video-placeholder').addEventListener('click', function() {
            alert('Add your video embed code or YouTube link here!\n\nExample: Replace this placeholder with:\n<iframe width="100%" height="100%" src="YOUR_VIDEO_URL" frameborder="0" allowfullscreen></iframe>');
        });
    </script>
